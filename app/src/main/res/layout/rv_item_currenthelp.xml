<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/bg_f2f2f2"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:background="@color/color_white_100"
        android:layout_margin="@dimen/margin_5dp"
        app:cardCornerRadius="@dimen/margin_5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="@dimen/margin_5dp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="60dp"
                android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/rv_image"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:src="@mipmap/ic_me_head"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:id="@+id/rv_time"
                    android:layout_marginBottom="@dimen/margin_10dp"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:textColor="#666666"
                    android:textSize="@dimen/text_size_10sp"
                    android:text="2018-12-12"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_width="180dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/rv_name"
                    android:layout_marginTop="5dp"
                    style="@style/font_14sp_333"
                    android:text="姓名：李小龙"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/rv_address"
                    android:maxLines="3"
                    android:layout_marginTop="5dp"
                    style="@style/font_14sp_333"
                    android:text="位置：广东省云浮跟复古风格市大小县福30号01户"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/rv_distance"
                    android:layout_marginBottom="@dimen/margin_5dp"
                    android:layout_marginTop="5dp"
                    style="@style/font_14sp_333"
                    android:text="距离：300米"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout

                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/nowhelp"
                    android:gravity="center"
                    android:background="@drawable/radius_shape"
                    android:orientation="vertical"
                    android:layout_width="50dp"
                    android:layout_height="50dp">
                    <TextView
                        style="@style/font_14sp_fff"
                        android:text="马上"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        style="@style/font_14sp_fff"
                        android:text="急救"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/help_number"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:textSize="@dimen/text_size_10sp"
                    android:text="已有3人前往"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>