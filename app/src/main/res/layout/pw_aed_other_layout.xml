<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_circular_bead_while"
    android:orientation="vertical">

    <TextView
        style="@style/common_font"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="其他" />

    <EditText
        android:id="@+id/otherInput"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/shape_annulus_edittext_rectangle_bg"
        android:hint="请输入AED品牌"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:text=""
        android:textCursorDrawable="@null"
        android:textSize="@dimen/text_size_14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:background="@color/line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel"
            style="@style/common_font"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="@color/pw_cancel_text_color" />

        <TextView
            android:id="@+id/confirm"
            style="@style/common_font"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确定"
            android:textColor="@color/pw_cancel_text_color" />
    </LinearLayout>
</LinearLayout>