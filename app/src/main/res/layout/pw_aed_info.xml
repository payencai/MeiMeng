<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white_100"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:paddingLeft="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="AED"
            android:textColor="#e1181e"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:padding="14dp"
            android:src="@mipmap/icon_shutdown" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:background="@color/line_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="12dp"
            android:layout_height="@dimen/margin_15dp"
            android:src="@mipmap/icon_while_location" />

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/beginNavigation"
            android:layout_toRightOf="@id/img1"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="地址显示地址显示地址显示地址显示地址显示地址显示地址显示" />

        <TextView
            android:id="@+id/beginNavigation"
            android:layout_width="68dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_circular_red_bg"
            android:gravity="center"
            android:text="开始导航"
            android:textColor="@color/color_white_100"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingLeft="28dp"
        android:paddingRight="12dp"
        android:paddingTop="6dp">

        <TextView
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@id/distance"
            android:textColor="@color/text_9"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="最近AED距离15.4公里"
            android:textColor="@color/text_9"
            android:textSize="11sp" />
    </RelativeLayout>


</LinearLayout>