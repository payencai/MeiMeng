<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="mmTextViewStyle" parent="AlertDialog.AppCompat">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:textColor">@color/color_white_100</item>
    </style>

    <style name="my_rb_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/rb_bg</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomPopWindowStyle">
        <item name="android:windowEnterAnimation">@anim/popwindow_anim_in</item>
        <item name="android:windowExitAnimation">@anim/popwindow_anim_out</item>
    </style>

    <style name="CustomTheme" parent="DefaultCityPickerTheme">
        <item name="cpCancelTextColor">@color/color_green</item>
        <item name="cpSearchCursorDrawable">@color/color_green</item>
        <item name="cpIndexBarNormalTextColor">@color/color_green</item>
        <item name="cpIndexBarSelectedTextColor">@color/color_green</item>
        <item name="cpSectionHeight">@dimen/custom_section_height</item>
        <item name="cpOverlayBackground">@color/color_green</item>
    </style>

    <style name="CustomAnim">
        <item name="android:windowEnterAnimation">@anim/custom_push_down_in</item>
        <item name="android:windowExitAnimation">@anim/custom_push_up_out</item>
    </style>

    <style name="common_font">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/text_333</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="font_10sp_333">
        <item name="android:textSize">@dimen/text_size_10sp</item>
        <item name="android:textColor">@color/text_333</item>

    </style>
    <style name="font_18sp_fff">
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:textColor">@color/color_white_100</item>
    </style>
    <style name="font_14sp_fff">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/color_white_100</item>
    </style>

    <style name="font_17sp_fff">
        <item name="android:textSize">@dimen/text_size_17sp</item>
        <item name="android:textColor">@color/color_white_100</item>
    </style>
    <style name="font_14sp_333">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/text_333</item>
    </style>
    <style name="time_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

</resources>
