<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@drawable/shape_roundrect_black_roundrect_bg">


    <com.example.meimeng.custom.CustomImageView
        android:id="@+id/headImg"
        android:layout_width="@dimen/length_view_30dp"
        android:layout_height="@dimen/length_view_30dp"
        android:src="@mipmap/logo"
        app:shape="circle" />

    <TextView
        android:id="@+id/chatContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_toRightOf="@id/headImg"
        android:gravity="center_vertical"
        android:text=""
        android:textColor="#fffefe"
        android:textSize="@dimen/text_size_14sp" />

</RelativeLayout>