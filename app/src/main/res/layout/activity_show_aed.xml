<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ShowAEDActivity">

    <include
        android:id="@+id/headLayout"
        layout="@layout/toobar_head_layout" />

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomLayout"
        android:layout_below="@id/headLayout"
        android:clickable="true"></com.baidu.mapapi.map.MapView>

    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/color_white_100"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="AED"
                    android:textColor="#e1181e"
                    android:textSize="14sp" />

                <View
                    android:layout_width="36dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="6dp"
                    android:background="#e1181e" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="呼叫无人飞机AED"
                    android:textColor="#e1181e"
                    android:textSize="14sp" />

                <View
                    android:layout_width="36dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="6dp"
                    android:background="#e1181e" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:background="@color/line_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="12dp"
                android:layout_height="@dimen/margin_15dp"
                android:src="@mipmap/icon_while_location" />

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/beginNavigation"
                android:layout_toRightOf="@id/img1"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="地址显示地址显示地址显示地址显示地址显示地址显示地址显示" />

            <TextView
                android:id="@+id/beginNavigation"
                android:layout_width="68dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_circular_red_bg"
                android:gravity="center"
                android:text="开始导航"
                android:textColor="@color/color_white_100"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingLeft="28dp"
            android:paddingRight="12dp"
            android:paddingTop="6dp">

            <TextView
                android:id="@+id/phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="12dp"
                android:layout_toLeftOf="@id/distance"
                android:textColor="@color/text_9"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="最近AED距离15.4公里"
                android:textColor="@color/text_9"
                android:textSize="11sp" />
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>