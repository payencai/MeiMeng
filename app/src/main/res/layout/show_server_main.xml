<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f2f2f2"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50dp"
        android:background="@color/red"
        android:padding="@dimen/margin_5dp">

        <ImageView
            android:id="@+id/server_msg"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:src="@mipmap/ic_common_nav_normal_messag"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/shape_circular_bead_while"
            android:orientation="horizontal">



            <LinearLayout
                android:id="@+id/searchMedBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="6dp"
                    android:src="@mipmap/ic_search"/>

                <TextView
                    android:id="@+id/searchHint"
                    style="@style/common_font"
                    android:layout_height="match_parent"
                    android:text="输入药品名"
                    android:textColor="@color/text_9"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/server_search"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:background="@drawable/search_mdedicine_bg"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请搜索药品名称"
                android:textColor="#999999"/>
        </LinearLayout>


        <ImageView

            android:id="@+id/server_switch"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:src="@mipmap/ic_switchaccount"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:background="@color/color_white_100"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_juli_date"
                    style="@style/font_14sp_333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="距离升星还有200日"/>

                <TextView
                    android:id="@+id/tv_or_help"
                    style="@style/font_14sp_333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="或救援10次"/>
            </LinearLayout>

            <TextView
                style="@style/font_14sp_333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginEnd="150dp"
                android:text="当前等级"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="34dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sun1"
                    android:layout_width="15dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="@dimen/margin_30dp"
                    android:src="@mipmap/ic_dengji"/>

                <ImageView
                    android:id="@+id/sun2"
                    android:layout_width="15dp"

                    android:layout_height="16dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/ic_dengji"/>

                <ImageView
                    android:id="@+id/sun3"
                    android:layout_width="15dp"

                    android:layout_height="16dp"
                    android:layout_marginTop="@dimen/margin_30dp"
                    android:src="@mipmap/ic_dengji"/>

                <ImageView
                    android:id="@+id/sun4"
                    android:layout_width="15dp"

                    android:layout_height="16dp"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:src="@mipmap/ic_dengji"/>

                <ImageView
                    android:id="@+id/sun5"
                    android:layout_width="15dp"

                    android:layout_height="16dp"
                    android:layout_marginTop="@dimen/margin_30dp"
                    android:src="@mipmap/ic_dengji"/>

            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/bg_f2f2f2"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
           >

            <LinearLayout
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_15dp"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:layout_weight="1"
                        android:text="救援次数"
                        android:textColor="#999999"
                        android:textSize="@dimen/text_size_10sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_5dp"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:layout_weight="1"
                        android:text="累计救援距离"
                        android:textColor="#999999"
                        android:textSize="@dimen/text_size_10sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_20dp"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:layout_weight="1.5"
                        android:text="在线累计时间"
                        android:textColor="#999999"
                        android:textSize="@dimen/text_size_10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_help_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_20dp"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:text="300"
                            android:textColor="#333333"
                            android:textSize="24sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:layout_weight="1"
                            android:text="次"
                            android:textColor="#999999"
                            android:textSize="@dimen/text_size_10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_help_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_10dp"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:text="300"
                            android:textColor="#333333"
                            android:textSize="24sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:layout_weight="1"
                            android:text="千米"
                            android:textColor="#999999"
                            android:textSize="@dimen/text_size_10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_help_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_10dp"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:text="300"
                            android:textColor="#333333"
                            android:textSize="24sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:layout_weight="1"
                            android:text="天"
                            android:textColor="#999999"
                            android:textSize="@dimen/text_size_10sp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_toLeftOf="@id/enter_main"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="@dimen/margin_15dp"
                android:layout_marginTop="10dp"
                android:background="@color/bg_f2f2f2"></View>

            <LinearLayout
                android:layout_marginRight="@dimen/margin_20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/enter_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_main_head"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_me_head" />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="11dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:src="@mipmap/ic_arrows_right" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/helpInfoContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"></FrameLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/base_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/getcurrenthelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>


</LinearLayout>