<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:background="@color/bg_f2f2f2"
    android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include  layout="@layout/toobar_head_layout"></include>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@color/color_white_100"
            android:layout_width="match_parent"
            android:layout_height="385dp">
            <LinearLayout
                android:gravity="center_vertical"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <TextView
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_weight="8"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_14sp"
                    android:text="姓名"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:gravity="end"
                    android:id="@+id/et_userinfo_name"
                    android:maxLength="6"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:background="@color/color_white_100"
                    android:textSize="@dimen/text_size_14sp"
                    android:hint="请输入真实姓名"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_marginLeft="@dimen/margin_15dp"
                android:background="@color/bg_f2f2f2"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
            <LinearLayout
                android:gravity="center_vertical"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <TextView
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_weight="8"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_14sp"
                    android:text="移动电话"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:gravity="right|center_vertical"
                    android:id="@+id/et_userinfo_phone"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:background="@color/color_white_100"
                    android:textSize="@dimen/text_size_14sp"
                    android:hint="13452145644"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_marginLeft="@dimen/margin_15dp"
                android:background="@color/bg_f2f2f2"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
            <LinearLayout
                android:gravity="center_vertical"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <TextView
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_weight="8"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_14sp"
                    android:text="固定电话"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:gravity="right|center_vertical"
                    android:id="@+id/et_userinfo_fixphone"
                    android:inputType="number"
                    android:maxLength="14"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:background="@color/color_white_100"
                    android:textSize="@dimen/text_size_14sp"
                    android:hint="02045124512"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_marginLeft="@dimen/margin_15dp"
                android:background="@color/bg_f2f2f2"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
            <LinearLayout
                android:id="@+id/layout_address"
                android:gravity="center_vertical"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <TextView
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_weight="8"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_14sp"
                    android:text="家庭住址"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/et_user_address"
                    android:layout_marginRight="3dp"
                    android:background="@color/color_white_100"
                    android:textSize="@dimen/text_size_14sp"
                    android:hint="详细家庭住址"
                    android:gravity="right|center_vertical"
                    android:layout_width="200dp"
                    android:maxLines="2"
                    android:maxLength="25"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:src="@mipmap/ic_arrows_right"
                    android:layout_width="8dp"
                    android:layout_height="15dp"/>

            </LinearLayout>
            <View
                android:layout_marginLeft="@dimen/margin_15dp"
                android:background="@color/bg_f2f2f2"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
            <LinearLayout
                android:gravity="center_vertical"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <TextView
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_weight="8"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_14sp"
                    android:text="性别"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <RadioGroup
                    android:id="@+id/rg_userinfo_sex"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/rb_userinfo_man"
                        style="@style/common_font"
                        android:drawablePadding="4dp"
                        android:layout_marginRight="@dimen/margin_10dp"
                        android:button="@null"
                        android:text="男"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:id="@+id/rb_userinfo_nv"
                        style="@style/common_font"
                        android:drawablePadding="4dp"
                        android:button="@null"
                        android:layout_marginRight="@dimen/margin_20dp"
                        android:text="女"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RadioGroup>

            </LinearLayout>
            <View
                android:layout_marginLeft="@dimen/margin_15dp"
                android:background="@color/bg_f2f2f2"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
            <LinearLayout
                android:gravity="center_vertical"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <TextView
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_weight="8"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_14sp"
                    android:text="年龄"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:gravity="right|center_vertical"
                    android:id="@+id/et_userinfo_age"
                    android:inputType="number"
                    android:maxLength="3"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:background="@color/color_white_100"
                    android:textSize="@dimen/text_size_14sp"
                    android:hint="32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_marginLeft="@dimen/margin_15dp"
                android:background="@color/bg_f2f2f2"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <TextView
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_weight="7"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_14sp"
                    android:text="血型"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:background="@drawable/shape_blood_bg"
                    android:orientation="horizontal"
                    android:layout_width="76dp"
                    android:layout_height="@dimen/margin_35dp">
                    <TextView
                        android:id="@+id/tv_userinfo_bloodType"
                        style="@style/common_font"
                        android:layout_weight="3"

                        android:text="A"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <ImageView
                  android:layout_marginRight="15dp"
                        android:src="@mipmap/ic_triangle"
                        android:layout_width="14dp"
                        android:layout_height="8dp"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
        
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/color_white_100"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_width="match_parent"
            android:layout_height="110dp">
            <LinearLayout
                android:gravity="center_vertical"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <TextView
                    android:maxLength="18"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_weight="8"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_14sp"
                    android:text="患病史"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <EditText

                    android:id="@+id/et_userinfo_sicken"
                    android:gravity="right|center_vertical"
                    android:maxLength="30"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:background="@color/color_white_100"
                    android:textSize="@dimen/text_size_14sp"
                    android:hint="请输入相关信息"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_marginLeft="@dimen/margin_15dp"
                android:background="@color/bg_f2f2f2"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <TextView
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_weight="8"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_14sp"
                    android:text="其它病史"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/et_userinfo_othersicken"
                    android:gravity="right|center_vertical"
                    android:maxLength="30"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:background="@color/color_white_100"
                    android:textSize="@dimen/text_size_14sp"
                    android:hint="请输入相关信息"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:background="@color/color_white_100"
            android:layout_marginTop="@dimen/margin_10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="165dp">
            <LinearLayout
                android:gravity="center_vertical"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <TextView
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_weight="8"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_14sp"
                    android:text="联系人1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:gravity="right|center_vertical"
                    android:id="@+id/et_userinfo_lianxi1"
                    android:maxLength="6"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:background="@color/color_white_100"
                    android:textSize="@dimen/text_size_14sp"
                    android:hint="请输入联系人"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_marginLeft="@dimen/margin_15dp"
                android:background="@color/bg_f2f2f2"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
            <LinearLayout
                android:gravity="center_vertical"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <TextView
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_weight="8"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_14sp"
                    android:text="联系人2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:gravity="right|center_vertical"
                    android:id="@+id/et_userinfo_lianxi2"
                    android:maxLength="6"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:background="@color/color_white_100"
                    android:textSize="@dimen/text_size_14sp"
                    android:hint="请输入联系人"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_marginLeft="@dimen/margin_15dp"
                android:background="@color/bg_f2f2f2"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
            <LinearLayout
                android:gravity="center_vertical"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <TextView
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_weight="8"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_14sp"
                    android:text="联系人3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:gravity="right|center_vertical"
                    android:id="@+id/et_userinfo_lianxi3"
                    android:maxLength="6"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:background="@color/color_white_100"
                    android:textSize="@dimen/text_size_14sp"
                    android:hint="请输入联系人"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
        <Button
            android:id="@+id/btn_userinfo_save"
            android:layout_marginBottom="@dimen/margin_40dp"
            android:layout_marginTop="@dimen/margin_50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:background="@drawable/shape_renzhen_btn"
            android:textColor="@color/color_white_100"
            android:textSize="@dimen/text_size_18sp"
            android:text="保存"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </LinearLayout>
</ScrollView>
