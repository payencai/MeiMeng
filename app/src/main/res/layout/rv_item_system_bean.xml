<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp">

    <TextView
        android:id="@+id/userTel"
        style="@style/common_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_12dp"
        android:text="张三    13480197987"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/drugInfo"
        style="@style/common_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="药品信息：救心丸/阿品托/阿品托/阿品托"
        android:textColor="@color/text_6"
        app:layout_constraintLeft_toLeftOf="@id/userTel"
        app:layout_constraintTop_toBottomOf="@id/userTel" />


    <ImageView
        android:id="@+id/img1"
        android:layout_width="11dp"
        android:layout_height="14dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_location"
        app:layout_constraintLeft_toLeftOf="@id/drugInfo"
        app:layout_constraintTop_toBottomOf="@id/drugInfo" />

    <TextView
        android:id="@+id/address"
        style="@style/common_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="广州市天河区天河公园"
        android:textColor="@color/text_9"
        android:textSize="@dimen/text_size_12sp"
        app:layout_constraintLeft_toRightOf="@id/img1"
        app:layout_constraintTop_toBottomOf="@id/drugInfo" />

</android.support.constraint.ConstraintLayout>