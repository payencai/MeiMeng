<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_f2f2f2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/toobar_head_layout"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:layout_marginTop="10dp"
            android:background="@color/color_white_100"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">
                <TextView
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="*"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/red"
                    android:layout_width="8dp"
                    android:layout_height="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="19dp"
                    android:text="姓名"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_14sp"/>

                <EditText
                    android:id="@+id/et_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="21dp"
                    android:background="@color/color_white_100"
                    android:gravity="end"
                    android:hint="请输入真实姓名"
                    android:maxLength="6"
                    android:textColor="@color/text_9"
                    android:textSize="@dimen/text_size_14sp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:background="@color/bg_f2f2f2"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="*"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/red"
                    android:layout_width="8dp"
                    android:layout_height="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="19dp"
                    android:text="移动电话"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_14sp"/>

                <EditText
                    android:id="@+id/et_user_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="19dp"
                    android:background="@color/color_white_100"
                    android:gravity="right|center_vertical"
                    android:hint="13452145644"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:textColor="@color/text_9"
                    android:textSize="@dimen/text_size_14sp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:background="@color/bg_f2f2f2"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_weight="8"
                    android:text="固定电话"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_14sp" />

                <EditText
                    android:textColor="@color/text_9"
                    android:id="@+id/et_user_fixphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:background="@color/color_white_100"
                    android:gravity="right|center_vertical"
                    android:hint="02045124512"
                    android:inputType="number"
                    android:maxLength="14"
                    android:textSize="@dimen/text_size_14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:background="@color/bg_f2f2f2"></View>

            <RelativeLayout
                android:id="@+id/layout_address"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="*"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/red"
                    android:layout_width="8dp"
                    android:layout_height="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="19dp"
                    android:text="家庭住址"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_14sp"/>

                <TextView
                    android:ellipsize="end"
                    android:id="@+id/et_user_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin_40dp"
                    android:background="@color/color_white_100"
                    android:hint="详细家庭住址"
                    android:maxEms="15"
                    android:singleLine="true"
                    android:textColor="@color/text_9"
                    android:textSize="@dimen/text_size_14sp"/>

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="@dimen/margin_20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@mipmap/ic_arrows_right"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:background="@color/bg_f2f2f2"></View>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:background="@color/bg_f2f2f2"></View>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="*"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/red"
                    android:layout_width="8dp"
                    android:layout_height="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="19dp"
                    android:text="年龄"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_14sp"/>

                <EditText
                    android:textColor="@color/text_9"
                    android:id="@+id/et_user_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="27dp"
                    android:text="12"
                    android:background="@color/color_white_100"
                    android:hint="32"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textSize="@dimen/text_size_14sp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:background="@color/bg_f2f2f2"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_weight="8"
                    android:text="血型"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_14sp" />

                <LinearLayout
                    android:id="@+id/ll_blood_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_35dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:background="@drawable/shape_blood_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_10dp"
                    android:paddingRight="5dp">

                    <TextView
                        android:textColor="@color/text_9"
                        android:id="@+id/tv_blood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A"
                        android:textSize="14sp"/>

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="@dimen/margin_20dp"
                        android:src="@mipmap/ic_triangle_down"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
        <TextView
            android:paddingRight="@dimen/margin_12dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:paddingTop="@dimen/margin_10dp"
            android:paddingLeft="15dp"
            android:background="@color/white"
            android:textColor="#999999"
            android:textSize="@dimen/text_size_13sp"
            android:text="“请填写真实完整的信息，错误的信息会影响志愿者和医生对您的病情判断”"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:background="@color/bg_f2f2f2"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"

            android:background="@color/color_white_100"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:maxLength="18"
                    android:text="患病史"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_14sp"/>

                <EditText
                    android:id="@+id/et_user_sicken"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:background="@color/color_white_100"
                    android:gravity="right|center_vertical"
                    android:hint="请输入相关信息"
                    android:maxLength="30"
                    android:textColor="@color/text_9"
                    android:textSize="@dimen/text_size_14sp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:background="@color/bg_f2f2f2"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_weight="8"
                    android:text="其它病史"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_14sp" />

                <EditText
                    android:textColor="@color/text_9"
                    android:id="@+id/et_user_othersicken"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:background="@color/color_white_100"
                    android:gravity="right|center_vertical"
                    android:hint="请输入相关信息"
                    android:maxLength="30"
                    android:textSize="@dimen/text_size_14sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@color/color_white_100"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/contacts1"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                >
                <TextView
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="*"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/red"
                    android:layout_width="8dp"
                    android:layout_height="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="18dp"
                    android:text="联系人1"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_14sp"/>

                <TextView
                    android:textColor="@color/text_9"
                    android:id="@+id/et_user_lianxi1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:background="@color/color_white_100"
                    android:hint="请输入联系人"
                    android:maxLength="20"
                    android:textSize="@dimen/text_size_14sp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:background="@color/bg_f2f2f2"></View>

            <RelativeLayout
                android:id="@+id/contacts2"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:text="联系人2"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_14sp"/>

                <TextView
                    android:textColor="@color/text_9"
                    android:id="@+id/et_user_lianxi2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:background="@color/color_white_100"
                    android:hint="请输入联系人"
                    android:maxLength="20"
                    android:textSize="@dimen/text_size_14sp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:background="@color/bg_f2f2f2"></View>

            <RelativeLayout
                android:id="@+id/contacts3"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:text="联系人3"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_14sp"/>

                <TextView
                    android:textColor="@color/text_9"
                    android:id="@+id/et_user_lianxi3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:background="@color/color_white_100"
                    android:hint="请输入联系人"
                    android:maxLength="20"
                    android:textSize="@dimen/text_size_14sp"/>
            </RelativeLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_user_save"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="@dimen/margin_40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_50dp"
            android:background="@drawable/shape_renzhen_btn"
            android:text="保存"
            android:textColor="@color/color_white_100"
            android:textSize="@dimen/text_size_18sp" />
    </LinearLayout>
</ScrollView>
