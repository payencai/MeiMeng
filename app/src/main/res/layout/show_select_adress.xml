<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/bg_f2f2f2"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
     <include layout="@layout/toobar_head_layout"></include>
    <LinearLayout
        android:id="@+id/select_address_layout"
        android:background="@color/color_white_100"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent "
        android:layout_height="50dp">
        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@mipmap/red_location"
            android:layout_width="20dp "
            android:layout_height="20dp"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textColor="#999999"
            android:textSize="@dimen/text_size_14sp"
            android:text="选择地址"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:background="@color/bg_f2f2f2"
        android:layout_width="match_parent"
        android:layout_height="1dp">

    </View>
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/color_white_100"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent "
        android:layout_height="50dp">
        <EditText
            android:id="@+id/et_input_address"
            android:textColor="#999999"
            android:textSize="14sp"
            android:background="@color/color_white_100"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:hint="请输入地址"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>