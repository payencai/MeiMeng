<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_f2f2f2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/toobar_head_layout"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="385dp"
            android:layout_marginTop="10dp"
            android:background="@color/color_white_100"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_weight="8"
                    android:text="姓名"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_14sp" />

                <EditText
                    android:id="@+id/et_userinfo_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:background="@color/color_white_100"
                    android:gravity="end"
                    android:hint="请输入真实姓名"
                    android:maxLength="6"
                    android:textSize="@dimen/text_size_14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:background="@color/bg_f2f2f2"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_weight="8"
                    android:text="移动电话"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_14sp" />

                <EditText
                    android:id="@+id/et_userinfo_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:background="@color/color_white_100"
                    android:gravity="right|center_vertical"
                    android:hint="13452145644"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:textSize="@dimen/text_size_14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:background="@color/bg_f2f2f2"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_weight="8"
                    android:text="固定电话"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_14sp" />

                <EditText
                    android:id="@+id/et_userinfo_fixphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:background="@color/color_white_100"
                    android:gravity="right|center_vertical"
                    android:hint="02045124512"
                    android:inputType="number"
                    android:maxLength="14"
                    android:textSize="@dimen/text_size_14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:background="@color/bg_f2f2f2"></View>

            <LinearLayout
                android:id="@+id/layout_address"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_weight="8"
                    android:text="家庭住址"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_14sp" />

                <TextView

                    android:id="@+id/et_user_address"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:background="@color/color_white_100"
                    android:gravity="right|center_vertical"
                    android:hint="详细家庭住址"
                    android:maxLength="25"
                    android:maxLines="2"
                    android:textSize="@dimen/text_size_14sp" />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:src="@mipmap/ic_arrows_right" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:background="@color/bg_f2f2f2"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_weight="8"
                    android:text="性别"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_14sp" />

                <RadioGroup
                    android:id="@+id/rg_userinfo_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_userinfo_man"
                        style="@style/common_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_10dp"
                        android:button="@null"
                        android:drawablePadding="4dp"
                        android:text="男" />

                    <RadioButton
                        android:id="@+id/rb_userinfo_nv"
                        style="@style/common_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_20dp"
                        android:button="@null"
                        android:drawablePadding="4dp"
                        android:text="女" />
                </RadioGroup>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:background="@color/bg_f2f2f2"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_weight="8"
                    android:text="年龄"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_14sp" />

                <EditText
                    android:id="@+id/et_userinfo_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:background="@color/color_white_100"
                    android:gravity="right|center_vertical"
                    android:hint="32"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textSize="@dimen/text_size_14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:background="@color/bg_f2f2f2"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_weight="9"
                    android:text="血型"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_35dp"
                    android:background="@drawable/shape_blood_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_10dp"
                    android:paddingRight="5dp">

                    <!--<TextView-->
                    <!--android:id="@+id/tv_userinfo_bloodType"-->
                    <!--style="@style/common_font"-->
                    <!--android:text=""-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"/>-->
                    <Spinner
                        android:id="@+id/select_blood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:overlapAnchor="false"></Spinner>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@color/color_white_100"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_weight="8"
                    android:maxLength="18"
                    android:text="患病史"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_14sp" />

                <EditText

                    android:id="@+id/et_userinfo_sicken"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:background="@color/color_white_100"
                    android:gravity="right|center_vertical"
                    android:hint="请输入相关信息"
                    android:maxLength="30"
                    android:textSize="@dimen/text_size_14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:background="@color/bg_f2f2f2"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_weight="8"
                    android:text="其它病史"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_14sp" />

                <EditText
                    android:id="@+id/et_userinfo_othersicken"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:background="@color/color_white_100"
                    android:gravity="right|center_vertical"
                    android:hint="请输入相关信息"
                    android:maxLength="30"
                    android:textSize="@dimen/text_size_14sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@color/color_white_100"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_weight="8"
                    android:text="联系人1"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_14sp" />

                <EditText
                    android:id="@+id/et_userinfo_lianxi1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:background="@color/color_white_100"
                    android:gravity="right|center_vertical"
                    android:hint="请输入联系人"
                    android:maxLength="6"
                    android:textSize="@dimen/text_size_14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:background="@color/bg_f2f2f2"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_weight="8"
                    android:text="联系人2"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_14sp" />

                <EditText
                    android:id="@+id/et_userinfo_lianxi2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:background="@color/color_white_100"
                    android:gravity="right|center_vertical"
                    android:hint="请输入联系人"
                    android:maxLength="6"
                    android:textSize="@dimen/text_size_14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:background="@color/bg_f2f2f2"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_weight="8"
                    android:text="联系人3"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_14sp" />

                <EditText
                    android:id="@+id/et_userinfo_lianxi3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:background="@color/color_white_100"
                    android:gravity="right|center_vertical"
                    android:hint="请输入联系人"
                    android:maxLength="6"
                    android:textSize="@dimen/text_size_14sp" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_userinfo_save"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="@dimen/margin_40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_50dp"
            android:background="@drawable/shape_renzhen_btn"
            android:text="保存"
            android:textColor="@color/color_white_100"
            android:textSize="@dimen/text_size_18sp" />
    </LinearLayout>
</ScrollView>
