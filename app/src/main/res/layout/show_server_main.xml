<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/bg_f2f2f2"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
            <include layout="@layout/toobar_head_layout"></include>

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/color_white_100"
        android:layout_width="match_parent"
        android:layout_height="135dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="64dp">
            <LinearLayout
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_juli_date"
                    style="@style/font_14sp_333"
                    android:text="距离升星还有200日"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_or_help"
                    style="@style/font_14sp_333"
                    android:text="或救援10次"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:layout_marginLeft="@dimen/margin_40dp"
                style="@style/font_14sp_333"
                android:layout_gravity="center"
                android:text="当前等级"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="@color/bg_f2f2f2"
            android:layout_width="match_parent"
            android:layout_height="2dp"></View>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="64dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="250dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:layout_marginLeft="@dimen/margin_20dp"
                        android:layout_weight="1"
                        android:text="救援次数"
                        android:textColor="#999999"
                        android:textSize="@dimen/text_size_10sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:layout_weight="1"
                        android:text="累计救援距离"
                        android:textColor="#999999"
                        android:textSize="@dimen/text_size_10sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="@dimen/margin_20dp"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:layout_weight="1"
                        android:text="在线累计时间"
                        android:textColor="#999999"
                        android:textSize="@dimen/text_size_10sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_help_count"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:layout_marginLeft="@dimen/margin_20dp"
                            android:text="300"
                            android:textColor="#333333"
                            android:textSize="24sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:layout_weight="1"
                            android:text="次"
                            android:textColor="#999999"
                            android:textSize="@dimen/text_size_10sp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_help_distance"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:layout_marginLeft="@dimen/margin_20dp"
                            android:text="300"
                            android:textColor="#333333"
                            android:textSize="24sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:layout_weight="1"
                            android:text="千米"
                            android:textColor="#999999"
                            android:textSize="@dimen/text_size_10sp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_help_time"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:layout_marginLeft="@dimen/margin_20dp"
                            android:text="300"
                            android:textColor="#333333"
                            android:textSize="24sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:layout_weight="1"
                            android:text="小时"
                            android:textColor="#999999"
                            android:textSize="@dimen/text_size_10sp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_marginRight="@dimen/margin_15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/bg_f2f2f2"
                android:layout_width="2dp"
                android:layout_height="match_parent"></View>
            <LinearLayout
                android:id="@+id/enter_main"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_main_head"
                    android:src="@mipmap/ic_me_head"
                    android:layout_gravity="center"
                    android:layout_width="44dp"
                    android:layout_height="44dp"/>
                <ImageView
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:src="@mipmap/ic_arrows_right"
                    android:layout_gravity="center"
                    android:layout_width="6dp"
                    android:layout_height="11dp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/getcurrenthelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
</LinearLayout>