<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
              android:id="@+id/medicine"
    android:orientation="vertical"
    android:paddingBottom="15dp">
    <LinearLayout

        android:id="@+id/med_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="25dp">

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:gravity="left"
            android:layout_weight="8"
            android:id="@+id/userTel"
            style="@style/common_font"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="张三    13480197987"
       />
        <ImageView
            android:id="@+id/drug_phone"
            android:layout_marginRight="@dimen/margin_30dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/phone"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </LinearLayout>



    <TextView
        android:layout_marginLeft="@dimen/margin_15dp"
        android:id="@+id/drugInfo"
        style="@style/common_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="药品信息：救心丸/阿品托/阿品托/阿品托"
        android:textColor="@color/text_6"
         />

    <RelativeLayout
        android:layout_marginTop="@dimen/margin_5dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="11dp"
            android:layout_height="14dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_locate"
            />

        <TextView
            android:layout_marginLeft="@dimen/margin_5dp"
            android:id="@+id/address"
            style="@style/common_font"
            android:maxWidth="230dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img1"
            android:gravity="left"
            android:text="广州市天河区番禺广州大学城250号三楼23楼模块复旦复辅导书复旦复"
            android:layout_centerInParent="true"
            android:textColor="@color/text_9"
            android:textSize="@dimen/text_size_12sp">

        </TextView>

        <TextView
            android:id="@+id/distance"
            style="@style/common_font"
            android:layout_marginLeft="@dimen/margin_30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="22dp"
            android:text="距离你500米"
            android:textColor="@color/text_9"
            android:textSize="@dimen/text_size_12sp"/>
    </RelativeLayout>
    <View
        android:layout_marginTop="@dimen/margin_5dp"

        android:background="@color/bg_f2f2f2"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>



</LinearLayout>