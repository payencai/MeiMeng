<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item0"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/color_white_100"
    android:paddingLeft="@dimen/margin_15dp"
    android:paddingRight="@dimen/margin_15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/isMustHint"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="*"
            android:textColor="@color/text_red"
            android:visibility="gone" />

        <TextView
            android:id="@+id/optionName"
            style="@style/common_font"
            android:layout_height="match_parent"
            android:text="AED品牌" />
    </LinearLayout>

    <TextView
        android:id="@+id/optionHint"
        style="@style/common_font"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/imgArrowsRight"
        android:maxLines="1"
        android:text="请选择AED品牌"
        android:textColor="@color/text_9" />

    <ImageView
        android:id="@+id/imgArrowsRight"
        android:layout_width="8dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_arrows_right" />

</RelativeLayout>