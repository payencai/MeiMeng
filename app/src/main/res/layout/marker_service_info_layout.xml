<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_transparency_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/markerTel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_white_100"
            android:text="志愿者：134****7692"
            android:textColor="@color/text_333"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/markerDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white_100"
            android:text="该志愿者距离您300米"
            android:textColor="@color/text_333"
            android:textSize="8sp" />
    </LinearLayout>


    <ImageView
        android:layout_width="10dp"
        android:layout_height="8dp"
        android:layout_below="@id/layout1"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_triangle_down2" />


</RelativeLayout>