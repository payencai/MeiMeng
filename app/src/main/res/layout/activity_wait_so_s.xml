<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.WaitSoSActivity">

    <TextView
        android:id="@+id/textHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/waitview"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="24dp"
        android:gravity="center"
        android:text="您即将通知家人和附近的人\n对您进行紧急求助"
        android:textColor="#333333"
        android:textSize="@dimen/text_size_18sp" />

    <com.example.meimeng.custom.WaitSOSView
        android:id="@+id/waitview"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_centerInParent="true" />


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_sos_wait" />


    <TextView
        android:id="@+id/cancel"
        android:layout_width="95dp"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp"
        android:background="@drawable/shape_circular_red_bg"
        android:gravity="center"
        android:text="取消"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_size_18sp" />
</RelativeLayout>