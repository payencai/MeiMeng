<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f2f2f2"
    android:orientation="vertical">

    <include layout="@layout/toobar_head_layout"></include>

    <LinearLayout
        android:id="@+id/client_updatename"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@color/color_white_100"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="8"
            android:text="修改昵称"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_14sp" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="15dp"
            android:layout_marginRight="15dp"
            android:src="@mipmap/ic_arrows_right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/exit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_60dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@color/color_white_100"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出登录"
            android:textColor="#e63030"
            android:textSize="@dimen/text_size_14sp" />
    </LinearLayout>

</LinearLayout>